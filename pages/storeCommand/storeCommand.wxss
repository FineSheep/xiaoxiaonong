/* miniprogram/pages/storeCommand/storeCommand.wxss */
page{
    transition: all 1s linear;
}
.command_bar{
 
    height: 100rpx;
    padding: 30rpx 20rpx;
    display: flex;
    justify-content: space-between;
    

}

.command_bar view{
    width: 140rpx;
    height: 90rpx;
    border-bottom: 1rpx solid #6495ED;
    font-size: 25rpx;
    text-align: center;
    line-height: 40rpx;
    letter-spacing: 3rpx;
}
.command_bar_point{
    border-style: none !important;
    letter-spacing: normal !important;
    font-size: 80rpx !important;
    color: rgba(240, 161, 72, 0.719);
    line-height: normal !important;
}
.command_bar text{
    display: block;
}
.command_sort{
    width: 95%;
    margin: 0 auto;
    padding:10rpx 0;
    display: flex;
    flex-flow: row wrap;
    align-content: flex-start;
    border-bottom: 1rpx solid rgba(123, 129, 123, 0.26);
}
.command_item{
    display: inline-block;
    padding: 10rpx;
    margin: 10rpx;
    background-color: rgba(221, 221, 38, 0.322);
    border-radius: 10rpx;
    font-weight: lighter;
    letter-spacing: 3rpx;
    font-size: small;
}
.command_item_active{
    background-color: rgb(255, 196, 0);
}