/* miniprogram/pages/personalCenter/personalCenter.wxss */
.personal_top{
    width: 100%;
    height: 400rpx;
    background-color: #ebe044;
    border-bottom-left-radius: 150rpx;
    border-bottom-right-radius: 150rpx;
}
.personal_top_item{
    width: 100%;
    height: 220rpx;
    /* border: 1rpx solid black; */
    position: relative;
    letter-spacing: 3rpx;
}
.personal_top_headshoot{
    width: 160rpx;
    height: 160rpx;
    border: 3rpx solid #fcec17;
    border-radius: 80rpx;
    margin: 30rpx;
    background-color: white;

}
.user_name{
    position: absolute;
    width: 250rpx;
    top: 50rpx;
    left: 220rpx;
    font-size: large;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 30rpx;
}
.personal_info_edit{
    width: 50rpx;
    height: 40rpx;
    position: absolute;
    left: 480rpx;
    top: 50rpx;
}
.user_type{
    position: absolute;
    display: inline-block;
    padding: 8rpx;
    border-radius: 10rpx;
    background-color: aliceblue;
    top: 130rpx;
    left: 220rpx;
    font-size: 20rpx;
}
.order_item{
    width: 90%;
    height: 320rpx;
    position: relative;
    /* border: 1rpx solid green; */
    margin: 0 auto;
    top: -150rpx;
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 10rpx 10rpx rgba(128, 146, 146, 0.041);
    letter-spacing: 3rpx;
}
.order_item_top{
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
    /* border: 1rpx solid black; */
    border-bottom: 1rpx solid #ebe044;
}
.order_item_bottom{
    width: 100%;
    height: 200rpx;
    /* border: 1rpx solid green; */
    margin-top: 20rpx;
    display: flex;
    justify-content: space-around;
}
.order_func_item{
    width: 22%;
    height: 100%;
    /* border: 1rpx solid black; */
    text-align: center;
    font-size: 25rpx;

}
.order_func_item image{
    width: 40%;
    height: 30%;
    display: block;
    margin: 30rpx auto;
}

.func_can{
    width: 90%;
    height: 300rpx;
    border: 2rpx solid rgba(65, 82, 65, 0.253);
    border-radius: 20rpx;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-content: space-around;
    justify-content: space-around;
    letter-spacing: 2rpx;
    color: rgba(0, 0, 0, 0.788);
    font-size: 25rpx;
    position: relative;
    top: -120rpx;
    box-shadow: 10rpx 10rpx rgba(128, 146, 146, 0.068);
    
}
.func_can_item{
    width: 22%;
    height: 40%;
    /* border: 5rpx solid blue; */
   /*  display: inline-block; */
    text-align: center;
  
}
.func_can_item image{
    width: 40%;
    height: 45%;
    display: block;
    margin: 15rpx auto;
    

}
.func_can_item_hover{
    background-color: rgba(0, 0, 0, 0.199);
    border-radius: 20rpx;
}



