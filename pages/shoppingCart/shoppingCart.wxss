/* miniprogram/pages/shoppingCart/shoppingCart.wxss */
page{
    margin-bottom: 110rpx;
    background-color: rgba(122, 101, 101, 0.048);
}
.cart_top{
    height: 60rpx;
    margin: 30rpx auto;
    border-bottom: 1rpx solid #ffa60060;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:0 35rpx;
    
}
.cart_top_fruit_num{
    font-size: 25rpx;
    letter-spacing: 2rpx;

}
.cart_item{
    width: 90%;
   /*  height: 250rpx; */
    margin: 0 auto;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    box-shadow: 10rpx 10rpx rgba(128, 146, 146, 0.041);
    background-color: white;
}

.cart_item_top{
    padding:  20rpx;
    /* border-bottom: 1rpx solid #FFA500; */
}
.cart_item_store_name{
    margin-left: 10rpx;
}
.cart_item_store_name::after{
    content: ' >';
}
.cart_item_goods_list{
    height: 150rpx;
    margin-bottom: 20rpx;
    padding:10rpx 20rpx;
    /* border: 1rpx solid green; */
    position: relative;
}
.cart_item_goods_list image{
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    margin-left: 10rpx;
    
}
.goods_name{
    width: 60%;
    position: absolute;
    left: 230rpx;
    top: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.goods_price{
    position: absolute;
    left: 230rpx;
    top: 90rpx;
    color: #FFA500;

}
.goods_price::before{
    content: '￥';
}
.goods_num{
    /* position: absolute;
    right: 60rpx;
    top: 90rpx; */
    display: inline-block;
    width: 80rpx;
    overflow-x: scroll;
    border: 1rpx solid #FFA500;
    text-align: center;
    border-radius: 20rpx;
}
.goods_num::before{
    content: 'x';
}
.goods_num_item{
    position: absolute;
    right: 40rpx;
    top: 80rpx;
    display: flex;
    align-items: center;
}
.goods_num_item text{
    text-align: center;
    padding: 0 20rpx;
    font-size: 40rpx;
}
.cart_bottom{
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    background-color: white;
    /* border: 1rpx solid green; */
    display: flex;
    align-items: center;
  
}
.cart_bottom_selectAll{
    margin-left: 30rpx;
    margin-right: 10rpx;
}
.cart_bottom_right{
    position: absolute;
    right: 30rpx;
    /* border: 1rpx solid yellow; */
}
.allCount{
    color: #FFA500;
}
.allCount::before{
    content: '￥';
}
.cart_bottom_pay{
    display: inline-block;
    width: 200rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: white;
    letter-spacing: 5rpx;
    background-color: #FFA500;
    border-radius: 50rpx;
    margin-left: 30rpx;
}
.delete_check{
    display: inline-block;
    letter-spacing: 5rpx;
    padding: 10rpx;
    border-radius: 20rpx;
    border:1rpx solid rgba(255, 0, 0, 0.596);
}
