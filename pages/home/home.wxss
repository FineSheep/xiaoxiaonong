/* miniprogram/pages/home/home.wxss */

.home_top_swiper{
    width: 100%;
    height: 360rpx;
    padding: 0;
    margin:0;
}
.home_top_swiper_item_image{
    width: 100%;
    height: 100%;
}
.home_search{
    width: 85%;
    height: 60rpx;
    padding-top: 15rpx;
    padding-left: 30rpx;
    border: 5rpx solid rgba(0, 128, 0, 0.651);
    border-radius: 40rpx;
    margin: 10rpx auto;

}
.home_search image{
    width: 50rpx;
    height: 50rpx;
    float: left;
    
}
.home_search input{
    width: 80%;
    float: left;
    margin-left: 20rpx;
    padding-left: 10rpx;
    letter-spacing: 5rpx;
    border-left: 5rpx solid rgba(0, 128, 0, 0.651);
    color: rgba(0, 128, 0, 0.651);
    
}
.home_search_placeholder{
    color: rgba(0, 128, 0, 0.534);
    font-weight: lighter;
    font-size: small;
    
}
.func_can{
    width: 100%;
    height: 400rpx;
    /* border: 5rpx solid green; */
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
    align-content: space-around;
    justify-content: space-around;
    letter-spacing: 2rpx;
    color: rgba(0, 0, 0, 0.788);
    font-size: 25rpx;
    
    
}
.func_can_item{
    width: 22%;
    height: 40%;
    /* border: 5rpx solid blue; */
    display: inline-block;
    text-align: center;
   
}
.func_can_item image{
    width: 35%;
    height: 35%;
    display: block;
    margin: 20rpx auto;
    

}
.func_can_item_hover{
    background-color: rgba(0, 0, 0, 0.199);
    border-radius: 20rpx;
}
.home_notice{
    width: 100%;
    height: 50rpx;
    padding: 20rpx 0;
    /* border: 1rpx solid green; */
    border-bottom: 1rpx solid rgba(115, 128, 0, 0.534);
    display: flex;
    align-items: center;
    justify-content: space-around;
    
   
}
.home_notice image{
    width: 100rpx;
    height: 40rpx;

}
.home_notice_tip{
    width: 70% !important;
    height: 50rpx;
    padding-left: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: red;
}
.home_notice_tip::after{
    content: '>>';
}
.notice_tip_blink{
    color: rgb(148, 72, 72);
}
.home_notice_tip_hover{
    background-color: rgba(0, 0, 0, 0.068);
    border-radius: 20rpx;
}